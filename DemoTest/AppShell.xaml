<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoTest"
    xmlns:pages="clr-namespace:DemoTest.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="ListLayoutTestPage"
        ContentTemplate="{DataTemplate pages:DefaultTestPage}"
        Route="ListLayoutTestPage" />
    <ShellContent
        Title="GridLayoutTestPage"
        ContentTemplate="{DataTemplate pages:GridLayoutTestPage}"
        Route="GridLayoutTestPage" />
    <ShellContent
        Title="OfficialScrollViewTestPage"
        ContentTemplate="{DataTemplate pages:DefaultScrollViewTestPage}"
        Route="OfficialScrollViewTestPage" />
    <ShellContent
        Title="OfficialCollectionViewTestPage"
        ContentTemplate="{DataTemplate pages:CollectionViewTestPage}"
        Route="OfficialCollectionViewTestPage" />

</Shell>
